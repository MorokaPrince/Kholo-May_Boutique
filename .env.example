# ===========================================
# Kholo & May Boutique - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Kholo & May Boutique"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION="Luxury Fashion & Lifestyle Boutique"

# ===========================================
# DATABASE - Azure SQL Database (Free Tier)
# ===========================================
# Option 1: Azure SQL Database Connection String
DATABASE_URL="sqlserver://your-server.database.windows.net:1433;database=kholomayboutique;user=your-username@your-server;password=your-password;encrypt=true;trustServerCertificate=false;connectionTimeout=30;"

# Option 2: For local development with SQL Server
# DATABASE_URL="sqlserver://localhost:1433;database=kholomayboutique;user=sa;password=your-password;encrypt=true;trustServerCertificate=true;"

# Option 3: SQLite for local development (uncomment if using SQLite)
# DATABASE_URL="file:./dev.db"

# ===========================================
# AZURE BLOB STORAGE (Free Tier)
# ===========================================
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-account-key;EndpointSuffix=core.windows.net"
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_CONTAINER_NAME=products
AZURE_STORAGE_CATALOG_CONTAINER=catalogs

# ===========================================
# AUTHENTICATION
# ===========================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# JWT Token Expiration (in seconds)
JWT_EXPIRES_IN=604800

# ===========================================
# PAYMENT GATEWAYS - South Africa
# ===========================================

# Payflex (Buy Now Pay Later)
PAYFLEX_API_KEY=your-payflex-api-key
PAYFLEX_API_SECRET=your-payflex-api-secret
PAYFLEX_API_URL=https://api.payflex.co.za/v1
PAYFLEX_MERCHANT_ID=your-merchant-id

# PayJustNow (Buy Now Pay Later)
PAYJUSTNOW_API_KEY=your-payjustnow-api-key
PAYJUSTNOW_API_SECRET=your-payjustnow-api-secret
PAYJUSTNOW_API_URL=https://api.payjustnow.co.za/v1
PAYJUSTNOW_MERCHANT_ID=your-merchant-id

# Stripe (Visa/Mastercard International)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayFast (South African Payment Gateway - Visa/Mastercard/Instant EFT)
PAYFAST_MERCHANT_ID=your-merchant-id
PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase
PAYFAST_API_URL=https://www.payfast.co.za/eng/process
PAYFAST_SANDBOX=true

# ===========================================
# EMAIL SETTINGS (Optional - Azure Communication Services)
# ===========================================
SMTP_HOST=smtp.azurecomm.net
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@kholomayboutique.co.za

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# ADMIN SETTINGS
# ===========================================
ADMIN_EMAIL=admin@kholomayboutique.co.za
ADMIN_PASSWORD=change-this-admin-password

# ===========================================
# ANALYTICS (Optional)
# ===========================================
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# ===========================================
# SEO SETTINGS
# ===========================================
NEXT_PUBLIC_SITE_URL=https://kholomayboutique.co.za
NEXT_PUBLIC_SITE_NAME="Kholo & May Boutique"
